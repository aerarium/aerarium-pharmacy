@model IEnumerable<ShoppingCartViewModel.ShoppingCartItemViewModel>
@* For some reason, the model must be a IEnumerable so we can use HtmlHelpers *@
@{
    var cart = Model as ShoppingCartViewModel;
}

<style>
    .table * tr * {
        text-align: center;
        vertical-align: middle !important;
    }
</style>

<div class="banner-top">
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
        <tr>
            <th></th>
            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
            <th>@Html.DisplayNameFor(model => model.Price)</th>
            <th>@Html.DisplayNameFor(model => model.SubTotal)</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 100px;">
                    <img alt="" src="@Html.DisplayFor(x => item.ProductPicture)" style="max-width: 100px;"/>
                </td>
                <td>
                    @Html.DisplayFor(model => item.ProductName)
                </td>
                <td>
                    <form asp-controller="ShoppingCart" asp-action="Index" method="post">
                        <input asp-for="@item.Quantity"/>
                        <input type="hidden" asp-for="@item.ProductId"/>
                        <input type="submit" value=""/> @* Put img of refresh here *@
                    </form>
                </td>
                <td>
                    @Html.DisplayFor(model => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(model => item.SubTotal)
                </td>
            </tr>
        }
        </tbody>
        <tfoot>
        <tr>
            <td colspan="3"></td>
            <th>@Html.DisplayNameFor(model => cart.Total)</th>
            <td>@Html.DisplayFor(model => cart.Total)</td>
        </tr>
        </tfoot>
    </table>
</div>

