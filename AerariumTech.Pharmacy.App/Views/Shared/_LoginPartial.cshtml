@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var isSignedIn = SignInManager.IsSignedIn(User);
    var user = await UserManager.GetUserAsync(User);
}

@if (isSignedIn)
{
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
            <i class="fa fa-usb" aria-hidden="true"></i>Olá, @user.Name.Split(' ').FirstOrDefault()!
        </a>
    </li>
    <li>
        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
            <i class="fa fa-power-off" aria-hidden="true" style="color: #FAB005;"></i>
            <button
                type="submit"
                class="btn btn-link navbar-btn navbar-link"
                style="display: inline-block; color: #999; font-size: 0.9em; box-sizing: border-box; margin: 0 0.5em; -webkit-transition: 0.5s all; text-decoration: none; margin-left: -5px;">
                Log out
            </button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Register">
            <i class="fa fa-arrow-right" aria-hidden="true"></i>Cadastro
        </a>
    </li>
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Login">
            <i class="fa fa-user" aria-hidden="true"></i>Login
        </a>
    </li>
}