@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@{
    var isSignedIn = SignInManager.IsSignedIn(User);
    var user = await UserManager.GetUserAsync(User);
}

@if (isSignedIn)
{
    <li>
        <a asp-area="" asp-controller="Manage" asp-action="Index" title="Manage">
            <i class="fa fa-usb"></i>Hello, @user.Name.Split(' ').FirstOrDefault()!
        </a>
    </li>
    <li>
        <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right" style="display: inherit;">
            <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
        </form>
    </li>
}
else
{
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Register">
            <i class="fa fa-arrow-right" aria-hidden="true"></i>Cadastro
        </a>
    </li>
    <li>
        <a asp-area="" asp-controller="Account" asp-action="Login">
            <i class="fa fa-user" aria-hidden="true"></i>Login
        </a>
    </li>
}