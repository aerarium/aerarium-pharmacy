@model CreateProductViewModel

@{
    ViewData["Title"] = "Novo produto";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <h2>Novo produto</h2>
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceWithoutDiscount" class="control-label"></label>
                    <input asp-for="PriceWithoutDiscount" class="form-control" />
                    <span asp-validation-for="PriceWithoutDiscount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SerialCode" class="control-label"></label>
                    <input asp-for="SerialCode" class="form-control" />
                    <span asp-validation-for="SerialCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PictureFile" class="control-label"></label>
                    <input type="file" asp-for="PictureFile" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="CategoriesId" class="control-label"></label>
                    <select asp-for="CategoriesId" class="form-control" asp-items="ViewBag.Categories"></select>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select asp-for="SupplierId" class="form-control" asp-items="ViewBag.Suppliers"></select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
