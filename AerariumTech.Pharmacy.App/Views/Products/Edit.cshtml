@model EditProductViewModel

@{
    ViewData["Title"] = "Editar produto";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">
                <input type="hidden" asp-for="Id"/>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control"/>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PriceWithoutDiscount" class="control-label"></label>
                    <input asp-for="PriceWithoutDiscount" class="form-control"/>
                    <span asp-validation-for="PriceWithoutDiscount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SerialCode" class="control-label"></label>
                    <input asp-for="SerialCode" class="form-control"/>
                    <span asp-validation-for="SerialCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoriesIds" class="control-label"></label>
                    <select asp-for="CategoriesIds" asp-items="@ViewBag.Categories" class="form-control"></select>
                    <span asp-validation-for="CategoriesIds" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SupplierId" class="control-label"></label>
                    <select asp-for="SupplierId" asp-items="@ViewBag.Suppliers" class="form-control"></select>
                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn btn-default"/>
                </div>
            </form>
        </div>
    </div>
</div>

