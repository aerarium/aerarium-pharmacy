@using AerariumTech.Pharmacy.App.Services
@model IEnumerable<Product>

@{
    var model = Model as PaginatedList<Product>;
}

@{
    ViewData["Title"] = "Produtos";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <a asp-controller="Products" asp-action="Create" style="float: right;" class="btn btn-primary">Cadastrar produto</a>
            <h3 class="card-title">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Price)</th>
                    <th>@Html.DisplayNameFor(m => m.PriceWithDiscount)</th>
                    <th>@Html.DisplayNameFor(m => m.SerialCode)</th>
                    <th>@Html.DisplayNameFor(m => m.Supplier)</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Price)</td>
                        <td>@Html.DisplayFor(m => item.PriceWithDiscount)</td>
                        <td>@Html.DisplayFor(m => item.SerialCode)</td>
                        <td>@Html.DisplayFor(m => item.Supplier.Name)</td>
                        <td>
                            <a asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                            <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Id">Visualizar</a>
                            <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>

